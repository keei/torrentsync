%html
  %head
    %title upload - torrentsync
    %link{:href => "/style.css", :rel => "stylesheet", :type => "text/css",
        :media => "screen"}
  %body
    %a{:href => '/'} Top
    %br
    %form{:action => '/upload', :method => 'post',
        :enctype => 'multipart/form-data'}
      %label{:for => 'file1'} Upload File
      %br
      %input#file1{:type => 'file', :name => 'file', :size => 60}
      %br
      %br
      %label{:for => 'tracker1'} Tracker
      %br
      %input#tracker1{:type => 'text', :name => 'tracker', :size => 60,
          :value => tracker}
      %br
      %br
      %input#private1{:type => 'checkbox', :name => 'private', :checked => true}
      %label{:for => 'private1'} Private
      %br
      %br
      %input{:type => 'submit', :value => 'Upload'}
