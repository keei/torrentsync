%html
  %head
    %title upload - torrentsync
    %link{:href => "/style.css", :rel => "stylesheet", :type => "text/css",
        :media => "screen"}
  %body
    %a{:href => '/'} Top
    %br
    %br
    %form{:action => '/upload', :method => 'post',
        :enctype => 'multipart/form-data'}
      %label{:for => 'file1'} STEP 1: Choose File
      %br
      %input.bigbutton#file1{:type => 'file', :name => 'file', :size => 30}
      %br
      %br
      %label STEP 2
      %br
      %input.bigbutton{:type => 'submit', :value => 'Upload'}
      %br
      %br
      %hr
      %br
      %label Options
      %br
      %br
      %label{:for => 'tracker1'} Tracker
      %br
      %input#tracker1{:type => 'text', :name => 'tracker', :size => 60,
          :value => tracker}
      %br
      %br
      %input#private1{:type => 'checkbox', :name => 'private', :checked => true}
      %label{:for => 'private1'} Private
